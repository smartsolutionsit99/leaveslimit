<odoo>
  <data>

    <record model="ir.ui.view" id="hr_holidays_status_inherit">
      <field name="name">hr.holidays.status.form.inherit</field>
      <field name="model">hr.holidays.status</field>
      <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
      <field name="arch" type="xml">
        <group name='second' position="after">
          <group string="Leave Request Limit" name="limit" col="4" colspan="4">
            <field name="monthly_limit"/>
            <field name="monthly_limit_amount"/>
            <field name="annual_limit"/>
            <field name="annual_limit_amount"/>
          </group>
        </group>
      </field>
    </record>

  </data>
</odoo>